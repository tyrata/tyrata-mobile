<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:tag="small-screen"
    tools:context="com.tyrata.tyrata.ui.MainActivity">

    <TextView
        android:id="@+id/device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="28dp"
        android:text="Unknown Address"
        android:textColor="#F5E01B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="28dp"
        android:text="Unknown Name"
        android:textColor="#F5E01B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_toolbar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="136dp"
        android:text="Device Name:"
        android:textColor="#F5E01B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="168dp"
        android:text="Device Address:"
        android:textColor="#F5E01B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_scalable"
        android:layout_width="416dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/read_register_btn"
        android:layout_width="105dp"
        android:layout_height="39dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="276dp"
        android:background="#F5E01B"
        android:text="Read Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set_register_btn"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="24dp"
        android:background="#F5E01B"
        android:text="Set Register"
        app:layout_constraintEnd_toStartOf="@+id/textView29"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/read_capDacA_btn"
        android:layout_width="206dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="#F5E01B"
        android:text="Read CapDac A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_capDacA_btn" />

    <Button
        android:id="@+id/set_capDacA_btn"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:background="#F5E01B"
        android:text="Set CapDac A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_temperature_btn" />

    <Button
        android:id="@+id/zero_cap_btn"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="#F5E01B"
        android:text="Zero Capacitance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_register_btn" />

    <Button
        android:id="@+id/get_voltage_btn"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:background="#F5E01B"
        android:text="Get Voltage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zero_cap_btn" />

    <Button
        android:id="@+id/get_temperature_btn"
        android:layout_width="218dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="#F5E01B"
        android:text="Get Temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_voltage_btn" />

    <Button
        android:id="@+id/update_values_btn"
        android:layout_width="327dp"
        android:layout_height="104dp"
        android:layout_marginStart="436dp"
        android:layout_marginTop="1120dp"
        android:background="#F5E01B"
        android:text="Update Values"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="100dp"
        android:text="SENSOR INFO"
        android:textColor="#F5E01B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="188dp"
        android:text="SETTINGS"
        android:textColor="#F5E01B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="28dp"
        android:text="Last Value"
        android:textColor="#F5E01B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="44dp"
        android:text="Last Read Value: "
        android:textColor="#F5E01B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/set_register_value"
        app:layout_constraintTop_toTopOf="@+id/set_register_value" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Last Read Cap Dac A Value"
        android:textColor="#F5E01B"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/temp_value"
        app:layout_constraintTop_toTopOf="@+id/set_capDacA_btn" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="140dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="Last Read Register: "
        android:textColor="#F5E01B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/register_value"
        app:layout_constraintTop_toTopOf="@+id/register_value" />

    <TextView
        android:id="@+id/capdacA_value"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:text="--"
        android:textColor="#F5E01B"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/read_capDacA_btn"
        app:layout_constraintEnd_toEndOf="@+id/textView31" />

    <TextView
        android:id="@+id/temp_value"
        android:layout_width="34dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:text="--"
        android:textColor="#F5E01B"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/voltage_value"
        app:layout_constraintTop_toBottomOf="@+id/voltage_value" />

    <TextView
        android:id="@+id/voltage_value"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:text="--"
        android:textColor="#F5E01B"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/zero_cap_value"
        app:layout_constraintTop_toBottomOf="@+id/zero_cap_value" />

    <TextView
        android:id="@+id/zero_cap_value"
        android:layout_width="37dp"
        android:layout_height="44dp"
        android:layout_marginTop="392dp"
        android:text="--"
        android:textColor="#F5E01B"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/set_register_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_value"
        android:layout_width="32dp"
        android:layout_height="39dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="16dp"
        android:text="--"
        android:textColor="#F5E01B"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set_register_value"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:layout_marginTop="348dp"
        android:text="--"
        android:textColor="#F5E01B"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/register_value"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/sleep_toggle"
        android:layout_width="194dp"
        android:layout_height="65dp"
        android:layout_marginStart="588dp"
        android:layout_marginTop="1008dp"
        android:text="Sleep"
        android:textColor="#F5E01B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>